<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arooba.virtualteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".aboutActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".testActivity" />
        <activity
            android:name=".learnActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".levelfourActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".levelthreeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".leveltwoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".puzzleActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".mainMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Ms TimTim"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playActivity"
            android:screenOrientation="landscape" />

        <service android:name=".BackgroundSoundService" />

    </application>

</manifest>